<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bestsort.bbslite.mapper.QuestionExtMapper">
    <resultMap id="BaseResultMap" type="cn.bestsort.bbslite.pojo.model.Question">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="creator" jdbcType="BIGINT" property="creator" />
        <result column="tag" jdbcType="VARCHAR" property="tag" />
        <result column="top" jdbcType="TINYINT" property="top" />
        <result column="topic" jdbcType="VARCHAR" property="topic" />
        <result column="category" jdbcType="VARCHAR" property="category" />
        <result column="user_avatar_url" jdbcType="VARCHAR" property="userAvatarUrl" />
        <result column="user_name" jdbcType="VARCHAR" property="userName" />
        <result column="follow_count" jdbcType="BIGINT" property="followCount" />
        <result column="view_count" jdbcType="BIGINT" property="viewCount" />
        <result column="like_count" jdbcType="BIGINT" property="likeCount" />
        <result column="status" jdbcType="TINYINT" property="status" />
        <result column="gmt_create" jdbcType="BIGINT" property="gmtCreate" />
        <result column="gmt_modified" jdbcType="BIGINT" property="gmtModified" />
    </resultMap>

    <select id="listBySearch" resultType="cn.bestsort.bbslite.pojo.model.Question">
        select *
        from question
        <where>
            status = 1
            <if test="category!=null and category!=''">
                and category = #{category}
            </if>
            <if test="topic != null and topic != ''">
                and topic = #{topic}
            </if>
            <if test="tag!=null and tag!=''">
                and tag = #{tag}
            </if>
            <if test="search!=null and search!=''">
                and title regexp #{search}
            </if>

            order by gmt_create DESC
        </where>
    </select>
    <insert id="insertQuestionExt" keyProperty="id" parameterType="cn.bestsort.bbslite.pojo.model.Question">
        insert into question
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="creator != null">
                creator,
            </if>
            <if test="tag != null">
                tag,
            </if>
            <if test="top != null">
                top,
            </if>
            <if test="topic != null">
                topic,
            </if>
            <if test="category != null">
                category,
            </if>
            <if test="userAvatarUrl != null">
                user_avatar_url,
            </if>
            <if test="userName != null">
                user_name,
            </if>
            <if test="followCount != null">
                follow_count,
            </if>
            <if test="viewCount != null">
                view_count,
            </if>
            <if test="likeCount != null">
                like_count,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="gmtCreate != null">
                gmt_create,
            </if>
            <if test="gmtModified != null">
                gmt_modified,
            </if>
            <if test="description != null">
                description,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=BIGINT},
            </if>
            <if test="title != null">
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="creator != null">
                #{creator,jdbcType=BIGINT},
            </if>
            <if test="tag != null">
                #{tag,jdbcType=VARCHAR},
            </if>
            <if test="top != null">
                #{top,jdbcType=TINYINT},
            </if>
            <if test="topic != null">
                #{topic,jdbcType=VARCHAR},
            </if>
            <if test="category != null">
                #{category,jdbcType=VARCHAR},
            </if>
            <if test="userAvatarUrl != null">
                #{userAvatarUrl,jdbcType=VARCHAR},
            </if>
            <if test="userName != null">
                #{userName,jdbcType=VARCHAR},
            </if>
            <if test="followCount != null">
                #{followCount,jdbcType=BIGINT},
            </if>
            <if test="viewCount != null">
                #{viewCount,jdbcType=BIGINT},
            </if>
            <if test="likeCount != null">
                #{likeCount,jdbcType=BIGINT},
            </if>
            <if test="status != null">
                #{status,jdbcType=TINYINT},
            </if>
            <if test="gmtCreate != null">
                #{gmtCreate,jdbcType=BIGINT},
            </if>
            <if test="gmtModified != null">
                #{gmtModified,jdbcType=BIGINT},
            </if>
            <if test="description != null">
                #{description,jdbcType=LONGVARCHAR},
            </if>
        </trim>
    </insert>

</mapper>